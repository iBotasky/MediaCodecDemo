<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent" android:layout_height="match_parent">
    <Button
            app:layout_constraintVertical_chainStyle="spread"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="wrap_content"
            app:layout_constraintBottom_toTopOf="@+id/mediaReverseCodec"
            android:id="@+id/mediaCodec"
            android:layout_height="wrap_content"
            android:text="Start Codec"
    />


    <Button
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/mediaCodec"
            android:layout_width="wrap_content"
            app:layout_constraintBottom_toTopOf="@+id/longMediaReverseCodec"
            android:id="@+id/mediaReverseCodec"
            android:layout_height="wrap_content"
            android:text="Start Reverse"
    />

    <Button
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/mediaReverseCodec"
            android:layout_width="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            android:id="@+id/longMediaReverseCodec"
            android:layout_height="wrap_content"
            android:text="Start Reverse Long Video"
    />
</androidx.constraintlayout.widget.ConstraintLayout>